<%= form_for @tile, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :item_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weight, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :weight, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :retail_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :retail_price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :resell_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :resell_price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :wholesale_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :wholesale_price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dealer_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dealer_price, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tiles_path, :class => 'btn' %>
  </div>
<% end %>
