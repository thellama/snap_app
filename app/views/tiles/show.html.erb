<%- model_class = Tile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @tile.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_code) %>:</strong></dt>
  <dd><%= @tile.item_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @tile.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:retail_price) %>:</strong></dt>
  <dd><%= @tile.retail_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resell_price) %>:</strong></dt>
  <dd><%= @tile.resell_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wholesale_price) %>:</strong></dt>
  <dd><%= @tile.wholesale_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dealer_price) %>:</strong></dt>
  <dd><%= @tile.dealer_price %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tile_path(@tile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tile_path(@tile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
