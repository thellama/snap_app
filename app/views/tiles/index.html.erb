<%- model_class = Tile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:item_code) %></th>
      <th><%= model_class.human_attribute_name(:weight) %></th>
      <th><%= model_class.human_attribute_name(:retail_price) %></th>
      <th><%= model_class.human_attribute_name(:resell_price) %></th>
      <th><%= model_class.human_attribute_name(:wholesale_price) %></th>
      <th><%= model_class.human_attribute_name(:dealer_price) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tiles.each do |tile| %>
      <tr>
        <td><%= link_to tile.id, tile_path(tile) %></td>
        <td><%= tile.name %></td>
        <td><%= tile.item_code %></td>
        <td><%= tile.weight %>&nbsp; lbs</td>
        <td><%= number_to_currency(tile.retail_price) %></td>
        <td><%= number_to_currency(tile.resell_price) %></td>
        <td><%= number_to_currency(tile.wholesale_price) %></td>
        <td><%= number_to_currency(tile.dealer_price) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tile_path(tile), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tile_path(tile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tile_path,
            :class => 'btn btn-primary' %>
