<h1>Listing tiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Item code</th>
      <th>Weight</th>
      <th>Retail price</th>
      <th>Resell price</th>
      <th>Wholesale price</th>
      <th>Dealer price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tiles.each do |tile| %>
      <tr>
        <td><%= tile.name %></td>
        <td><%= tile.item_code %></td>
        <td><%= tile.weight %></td>
        <td><%= tile.retail_price %></td>
        <td><%= tile.resell_price %></td>
        <td><%= tile.wholesale_price %></td>
        <td><%= tile.dealer_price %></td>
        <td><%= link_to 'Show', tile %></td>
        <td><%= link_to 'Edit', edit_tile_path(tile) %></td>
        <td><%= link_to 'Destroy', tile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tile', new_tile_path %>
